source 'http://rubygems.org'

# app framework and support
gem 'sinatra'
gem 'sinatra-contrib'

# submission persistence
gem 'redis'

# front-end framework and support
gem 'bootstrap-sass'
gem 'compass'
gem 'uglifier'

# view renderer
gem 'haml'

# xml builder
gem 'builder'

# application runner and faster server
gem 'puma'

# background jobs
gem 'resque'

# mailer
gem 'mail'

# parsers
gem 'nokogiri', require: false
gem 'open_uri_redirections', require: false

# debugging
gem 'pry'

# testing
gem 'minitest'